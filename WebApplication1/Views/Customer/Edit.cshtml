@model CustomerEditViewModel


<form method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Your Name">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" asp-for="Email" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" class="form-control" asp-for="Phone" placeholder="Phone">
    </div>
    <input type="hidden" name="id" value="@Model.Id" />
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if(ViewBag.Error != null){
    <h5>@ViewBag.Error</h5>
}